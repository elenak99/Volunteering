    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="~/VolonterskiAngazman/Index" class="btn btn-default" style="margin-left:11px;font-size:18px;font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">Назад</a>

            <input type="submit" value="Додади" style="font-size:18px" class="btn btn-warning" />
        </div>
    </div>
    
